# Cache Control para evitar cache agresivo del navegador

# Para archivos HTML - no cache
/*.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Para el index.html principal
/
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Para archivos JS y CSS con hash - cache largo
/assets/*.js
  Cache-Control: public, max-age=31536000, immutable

/assets/*.css
  Cache-Control: public, max-age=31536000, immutable

# Para archivos de imágenes - cache moderado
/lovable-uploads/*
  Cache-Control: public, max-age=86400

# Para archivos estáticos sin hash - cache corto
/*.js
  Cache-Control: public, max-age=3600

/*.css
  Cache-Control: public, max-age=3600